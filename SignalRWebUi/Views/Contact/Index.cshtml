@model List<ResultContactDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bize Ulaş Sayfası Ayarları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Ayarları</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger btn-rounded">Sil</a>	</td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success btn-rounded">Güncelle</a>	</td>

									</tr>
								}


							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary btn-rounded">Yeni İletişim Oluştur</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

