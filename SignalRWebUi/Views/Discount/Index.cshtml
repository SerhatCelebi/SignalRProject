@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirim Ayarları
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-warning btn-rounded">Durum</a>	</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger btn-rounded">Sil</a>	</td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success btn-rounded">Güncelle</a>	</td>

									</tr>
								}


							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary btn-rounded">Yeni İndirim Oluştur</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

