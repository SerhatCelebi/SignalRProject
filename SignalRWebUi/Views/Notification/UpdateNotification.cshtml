@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="NotificationID" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirimi Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Bildirim Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Type">Bildirim Türü</label>
                                <input type="text" class="form-control" asp-for="Type" id="Type">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Icon">Bildirim İconu</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Status">Bildirim Durumu</label>
                                <input type="text" class="form-control" asp-for="Status" id="Status">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Date">Bildirim Tarihi</label>
                                <input type="text" class="form-control" asp-for="Date" id="Date">
                            </div>
                        </div>



                        <div class="card-action">
                            <button class="btn btn-primary">Bildirimi Güncelle</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>