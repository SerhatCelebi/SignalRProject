@model List<ResultNotificationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirim İşlemleri
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
									<th scope="col">Okundu İşaretle</th>
									<th scope="col">Okunmadı İşaretle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td><a href="/Notification/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger btn-rounded">Sil</a>	</td>
										<td><a href="/Notification/UpdateNotification/@item.NotificationID" class="btn btn-outline-success btn-rounded">Güncelle</a>	</td>
										<td><a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-outline-warning btn-rounded">Okundu</a>	</td>
										<td><a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-outline-secondary btn-rounded">Okunmadı</a>	</td>

									</tr>
								}


							</tbody>
						</table>
						<a href="/Notification/CreateNotification/" class="btn btn-outline-primary btn-rounded">Yeni Bildirim Oluştur</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>


